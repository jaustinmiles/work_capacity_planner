{
  "name": "work-capacity-planner",
  "version": "0.1.0",
  "description": "Electron app for managing workload with capacity-based scheduling",
  "main": "electron.js",
  "scripts": {
    "start": "npm run build:main && npm run build:preload && concurrently -k \"npm run dev\" \"wait-on http://localhost:5174 && npm run electron:dev\"",
    "start:stable": "npm run build:main && npm run build:preload && concurrently -k \"npm run dev:stable\" \"wait-on http://localhost:5174 && npm run electron:dev\"",
    "start:client": "npm run build:main && npm run build:preload && concurrently -k \"npm run dev\" \"wait-on http://localhost:5174 && npm run electron:client\"",
    "start:client:stable": "npm run build:main && npm run build:preload && concurrently -k \"npm run dev:stable\" \"wait-on http://localhost:5174 && npm run electron:client\"",
    "start:server-mode": "concurrently -k \"npm run server:dev\" \"sleep 2 && npm run start\"",
    "dev": "vite",
    "dev:stable": "vite --config vite.config.stable.ts",
    "build:main": "tsc src/main/index.ts --outDir dist --module commonjs --esModuleInterop --skipLibCheck --sourceMap",
    "build:preload": "tsc src/preload/index.ts --outDir dist --module commonjs --esModuleInterop --skipLibCheck --sourceMap",
    "build:mcp": "tsc scripts/mcp/*.ts --outDir scripts/mcp/dist --module commonjs --esModuleInterop --skipLibCheck --resolveJsonModule",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:client": "dotenv -e .env.client -- cross-env NODE_ENV=development electron .",
    "electron:debug": "cross-env NODE_ENV=development ELECTRON_ENABLE_LOGGING=1 electron --inspect . --remote-debugging-port=9223",
    "debug": "npm run build:main && npm run build:preload && concurrently -k \"npm run dev\" \"wait-on http://localhost:5174 && npm run electron:debug\"",
    "server": "dotenv -e .env.server -- tsx src/server/index.ts",
    "server:dev": "dotenv -e .env.server -- tsx watch src/server/index.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "db:migrate:pg": "dotenv -e .env.server -- prisma migrate dev",
    "db:studio:pg": "dotenv -e .env.server -- prisma studio",
    "db:migrate-data": "dotenv -e .env.server -- tsx scripts/migrate-sqlite-to-postgres.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --quiet",
    "lint:fix": "eslint . --fix --quiet",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "postinstall": "./scripts/dev/setup-git-hooks.sh || echo 'Git hooks setup failed (may be CI environment)'"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "productivity",
    "task-management"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@swc/core": "^1.13.3",
    "@swc/helpers": "^0.5.17",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^9.32.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "glob": "^11.0.3",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.11",
    "postcss": "^8.5.6",
    "prisma": "^6.13.0",
    "tailwindcss": "^4.1.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2",
    "vite": "^7.0.6",
    "vitest": "^3.2.4",
    "vitest-canvas-mock": "^0.3.3",
    "wait-on": "^8.0.4"
  },
  "overrides": {
    "openai": {
      "zod": "$zod"
    }
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.58.0",
    "@arco-design/web-react": "^2.66.2",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@modelcontextprotocol/sdk": "^1.18.2",
    "@prisma/client": "^6.13.0",
    "@trpc/client": "^10.45.4",
    "@trpc/server": "^10.45.4",
    "better-sqlite3": "^12.2.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.1",
    "dotenv-cli": "^11.0.0",
    "electron-log": "^5.4.2",
    "express": "^5.2.1",
    "openai": "^5.12.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "reactflow": "^11.11.4",
    "superjson": "^2.2.6",
    "zod": "^4.3.5",
    "zustand": "^5.0.7"
  }
}
