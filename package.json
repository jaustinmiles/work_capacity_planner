{
  "name": "work-capacity-planner",
  "version": "0.1.0",
  "description": "Electron app for managing workload with capacity-based scheduling",
  "main": "electron.js",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc src/main/index.ts --outDir dist --module commonjs --esModuleInterop --skipLibCheck",
    "build:preload": "tsc src/preload/index.ts --outDir dist --module commonjs --esModuleInterop --skipLibCheck",
    "build:renderer": "vite build",
    "electron": "electron .",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "start": "npm run build:main && npm run build:preload && concurrently -k \"npm run dev\" \"wait-on http://localhost:5174 && npm run electron:dev\"",
    "start:logged": "./scripts/dev/dev-with-logging.sh",
    "start:stable": "./scripts/dev/dev-no-watch.sh",
    "restart": "pkill -f electron && chmod 666 dev.db 2>/dev/null || true && npm run start",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "coverage:modules": "vitest --coverage --reporter=verbose && node scripts/dev/coverage-by-module.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:responsive": "playwright test e2e/responsive.spec.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "db:backup": "node scripts/database/backup-db.js",
    "db:restore": "node scripts/database/restore-db.js",
    "typecheck": "tsc --noEmit -p tsconfig.dev.json",
    "typecheck:strict": "tsc --noEmit -p tsconfig.prod.json",
    "typecheck:count": "tsc --noEmit -p tsconfig.prod.json 2>&1 | grep 'error TS' | wc -l",
    "typecheck:all": "tsc --noEmit",
    "typecheck:test": "tsc --noEmit -p tsconfig.test.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix --quiet",
    "check": "npm run typecheck && npm run lint",
    "preview": "vite preview",
    "feedback": "node scripts/analysis/feedback-utils.js",
    "feedback:high": "node scripts/analysis/feedback-utils.js high",
    "feedback:summary": "node scripts/analysis/feedback-utils.js summary",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "setup:hooks": "./scripts/dev/setup-git-hooks.sh",
    "postinstall": "./scripts/dev/setup-git-hooks.sh || echo 'Git hooks setup failed (may be CI environment)'"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "productivity",
    "task-management"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@swc/core": "^1.13.3",
    "@swc/helpers": "^0.5.17",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^9.32.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "prisma": "^6.13.0",
    "tailwindcss": "^4.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^7.0.6",
    "vitest": "^3.2.4",
    "vitest-canvas-mock": "^0.3.3",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.58.0",
    "@arco-design/web-react": "^2.66.2",
    "@prisma/client": "^6.13.0",
    "better-sqlite3": "^12.2.0",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "dotenv": "^17.2.1",
    "electron-log": "^5.4.2",
    "openai": "^5.12.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "reactflow": "^11.11.4",
    "zustand": "^5.0.7"
  }
}
