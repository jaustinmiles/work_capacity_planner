{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "noEmit": false,
    "outDir": "dist"
  },
  "include": [
    "vite.config.ts",
    "src/main/**/*",
    "src/preload/**/*"
  ]
}