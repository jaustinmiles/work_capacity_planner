{
  "permissions": {
    "allow": [
    ],
    "deny": [
      "Bash(git push --force)",
      "Bash(git push -f)",
      "Bash(git push:*)",
      "Bash(git commit --amend)",
      "Bash(git rebase -i:*)",
      "Bash(git reset --hard:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr comment:*)",
      "Bash(gh api:*)",
      "Bash(grep -r:*)",
      "Bash(find:*)",
      "Bash(rg:*)",
      "Bash(tail -f:*)",
      "Bash(sqlite3:*)",
      "Bash(npx prisma studio:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)",
      "Bash(rm -rf:*)",
      "Bash(curl:*)",
      "Bash(wget:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npm run lint -- --fix ${file} --quiet",
            "timeout": 10000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "[[ \"${file}\" =~ \\.test\\.(ts|tsx)$ ]] && exit 0; dir=$(dirname \"${file}\"); base=$(basename \"${file}\"); name=\"${base%.ts}\"; name=\"${name%.tsx}\"; tests=\"\"; [[ -f \"${dir}/${name}.test.ts\" ]] && tests=\"${dir}/${name}.test.ts\"; [[ -f \"${dir}/__tests__/${name}.test.ts\" ]] && tests=\"${tests} ${dir}/__tests__/${name}.test.ts\"; [[ -n \"$tests\" ]] && npm test -- $tests || true",
            "timeout": 30000
          }
        ]
      }
    ]
  }
}