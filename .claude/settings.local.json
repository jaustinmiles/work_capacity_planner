{
  "permissions": {
    "allow": [
      "mcp__git__get_pr_reviews",
      "mcp__git__reply_to_comment",
      "mcp__diagnostic__get_next_feedback",
      "mcp__diagnostic__inspect_database",
      "mcp__git__health_check",
      "mcp__git__setup_bot_auth",
      "mcp__diagnostic__run_lint",
      "mcp__diagnostic__typecheck",
      "mcp__diagnostic__run_tests",
      "mcp__diagnostic__run_test_file",
      "mcp__git__stage_files",
      "mcp__git__create_feature_branch",
      "mcp__git__commit_changes"
    ],
    "deny": [],
    "defaultMode": "acceptEdits",
    "additionalDirectories": [
      "/tmp"
    ]
  },
  "enabledMcpjsonServers": [
    "diagnostic",
    "git"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "mcp__git__commit_changes",
        "hooks": [
          {
            "type": "command",
            "command": "BRANCH=$(git branch --show-current); if [ \"$BRANCH\" = \"main\" ]; then echo \"‚ùå Cannot commit directly to main branch. Please create a feature branch first.\"; exit 1; fi"
          }
        ]
      }
    ]
  },
  "outputStyle": "default"
}
